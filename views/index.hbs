<body class="bg-gradient-to-r from-indigo-500 from-10% via-sky-500 via-30% to-emerald-500 to-90%">
    <div class="flex justify-center mt-4">
        <button class="rounded-lg text-xl bg-green-400 px-4 py-2 create-button">Create Room</button>
        <button class="rounded-lg text-xl bg-blue-500 px-4 py-2 ml-4 join-button">Join Room</button>
    </div>
    <div class=" flex  justify-between ml-2 mt-4">
        <button class="rounded-lg text-xl bg-green-400 px-2">Players 1</button>
        <div class="flex gap-3 mr-5">
